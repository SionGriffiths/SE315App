<%= form_for @wine, :html => { :class => "form-horizontal wine" } do |f| %>

  <% if @wine.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@wine.errors.count, "error") %> prohibited this wine from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @wine.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
