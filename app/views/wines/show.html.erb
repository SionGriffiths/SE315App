<%- model_class = Wine -%>
<!--This file has markup generated by bootstrap-->
<%

   if @wine.pic_url == '' || @wine.pic_url == nil
     image_reference =  'placeholder_bottle.png'
   else
     image_reference = @wine.pic_url
   end


%>

<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div class="page-header">
  <h2><%= @wine.name %></h2>
</div>
<div class="container col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
<dl class="dl-horizontal">


  <dd><%= image_tag(image_reference) %></dd>

  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd class="show_wine_name"><%= @wine.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd class="show_wine_desc"><%= @wine.description %></dd>

  <dt><strong><%= model_class.human_attribute_name(:short_description) %>:</strong></dt>
  <dd class="show_wine_short_desc"><%= @wine.short_description %></dd>

  <dt><strong><%= model_class.human_attribute_name(:country_of_origin) %>:</strong></dt>
  <dd class="show_wine_country"><%= @wine.country_of_origin %></dd>

  <dt><strong><%= model_class.human_attribute_name(:grape_type) %>:</strong></dt>
  <dd class="show_wine_grape"><%= @wine.grape_type %></dd>

  <dt><strong><%= model_class.human_attribute_name(:vegetarian) %>:</strong></dt>
  <dd class="show_wine_veg"><%= @wine.vegetarian %></dd>

  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd class="show_wine_price"><%= @wine.price %></dd>

  <dt><strong><%= model_class.human_attribute_name(:supplier_company) %>:</strong></dt>
  <dd class="show_wine_supplier"><%= @wine.supplier.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:product_number) %>:</strong></dt>
  <dd class="show_wine_product_num"><%= @wine.product_number %></dd>

  <dt><strong><%= model_class.human_attribute_name(:bottle_size) %>:</strong></dt>
  <dd class="show_wine_bottle_size"><%= @wine.bottle_size %></dd>



</dl>
<%= form_tag line_items_path(wine_id: @wine),:class => 'form-inline center' do %>
      <div class="col-lg-8 col-lg-offset-2">
    <%= number_field_tag :quantity,  params[:quantity], min:1, max:999, :value => 1, class:'form-control' %>
    <%= submit_tag 'Add to basket', class:'btn btn-default' %>
</div>
<% end %>

</div>
