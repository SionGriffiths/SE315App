<%- model_class = Wine -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @wine.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @wine.description %></dd>

  <dt><strong><%= model_class.human_attribute_name(:short_description) %>:</strong></dt>
  <dd><%= @wine.short_description %></dd>

  <dt><strong><%= model_class.human_attribute_name(:country_of_origin) %>:</strong></dt>
  <dd><%= @wine.country_of_origin %></dd>

  <dt><strong><%= model_class.human_attribute_name(:grape_type) %>:</strong></dt>
  <dd><%= @wine.grape_type %></dd>

  <dt><strong><%= model_class.human_attribute_name(:vegetarian) %>:</strong></dt>
  <dd><%= @wine.vegetarian %></dd>

  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @wine.price %></dd>

  <dt><strong><%= model_class.human_attribute_name(:supplier_company) %>:</strong></dt>
  <dd><%= @wine.supplier_company %></dd>

  <dt><strong><%= model_class.human_attribute_name(:product_number) %>:</strong></dt>
  <dd><%= @wine.product_number %></dd>

  <dt><strong><%= model_class.human_attribute_name(:bottle_size) %>:</strong></dt>
  <dd><%= @wine.bottle_size %></dd>

  <dt><strong><%= model_class.human_attribute_name(:pic_url) %>:</strong></dt>
  <dd><%= @wine.pic_url %></dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              wines_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_wine_path(@wine), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              wine_path(@wine),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
