<% if flash[:alert] || notice %>
    <div class="row">
      <div>
        <div class="update-nag">
          <div class="update-split update-danger"></div>
          <div class="update-text"><%= flash[:alert] %> <%= notice %></div>
        </div>
      </div>
     </div>
  <% end %>

<div class="container col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <%= form_tag do %>
      <div class="form-group " id="login_form">
      <fieldset>
        <h1 id="login_header">Please Log In</h1>
        <div >
          <%= label_tag :email, 'Email:'%>
          <%= text_field_tag :email, params[:email] , id:'login_email_field', class: 'form-control'%>
          </div>
        <div id="login_password">
          <%= label_tag :password, 'Password:' %>
          <%= password_field_tag :password, params[:password], id:'login_password_field', class: 'form-control' %>
        </div >
        <div class="row" >
          <%= submit_tag "Login" , id:'login_submit', class:'btn btn-default col-md-4' %>
          <%= link_to "Register", register_url, class:'btn btn-default col-md-4'  %>
          <%= link_to "Browse Wines", wines_path, class:'btn btn-default col-md-4'  %>
        </div>
      </fieldset>
      </div>
  <% end %>
</div>