<% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
  <% end %>
<div class="container col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <%= form_tag do %>
      <div class="form-group ">
      <fieldset>
        <h1 id="login_header">Please Log In</h1>
        <div>
          <%= label_tag :email, 'Email:'%>
          <%= text_field_tag :email, params[:email] , class: 'form-control'%>
          </div>
        <div>
          <%= label_tag :password, 'Password:' %>
          <%= password_field_tag :password, params[:password], class: 'form-control' %>
        </div>
        <div>
          <%= submit_tag "Login" , id:'login_submit', class:'btn btn-default' %>
          <%= link_to "Register", register_url, class:'btn btn-default'  %>
        </div>
      </fieldset>
      </div>
  <% end %>
</div>